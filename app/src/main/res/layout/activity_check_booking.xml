<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBooking">

    <EditText
        android:id="@+id/bookingPinInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="text"
        android:maxLength="36"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="181dp"
        android:text="Enter Booking Pin/ID"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Check"
        app:layout_constraintEnd_toEndOf="@+id/bookingPinInput"
        app:layout_constraintStart_toStartOf="@+id/bookingPinInput"
        app:layout_constraintTop_toBottomOf="@+id/bookingPinInput" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="31dp"
        android:text="Status:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/testingsiteview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bookingstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/testingsitevieww"
        app:layout_constraintEnd_toStartOf="@+id/testingsitevieww"
        app:layout_constraintStart_toStartOf="@+id/testingsitevieww" />

    <Button
        android:id="@+id/viewallbooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="85dp"
        android:text="View All Booking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/testingsiteview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:text="Testing Site:"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/testingsitevieww"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:text="Start Time:"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/starttimeview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/testingsitevieww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="23dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/starttimeview"
        app:layout_constraintStart_toEndOf="@+id/testingsiteview" />

    <TextView
        android:id="@+id/starttimeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="41dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/viewallbooking"
        app:layout_constraintStart_toEndOf="@+id/textView18" />
</androidx.constraintlayout.widget.ConstraintLayout>